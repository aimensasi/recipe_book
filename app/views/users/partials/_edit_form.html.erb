<div class="container">
  <!-- Info Card -->
  <div class="header">
    <h1>Your Information</h1>
  </div>
  <div class="card-block info-card">
    <div class="form-group row">
     <%= image_tag(@user.avatar ? @user.avatar : "default_big.png",
          :size => "200x150", :class => "img-thumbnail thumbnail_saml", :id => "thumbnail_saml") %>
    </div>
    <%= form_for @user, :method => "PATCH" do |f|%>
      <!-- Form For School Update  -->
      <div class="form-group row">

        <%= f.file_field :avatar, accept: 'image/png,image/jpg,image/jpeg',
                                :class => "inputfile", "data-parent" => "logo" %>
        <%= f.label :avatar, :class => "btn btn-file logo-btn" do %>
          <% end -%>
      </div>

      <div class="form-group row">
        <%= f.label :first_name, "First Name", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :first_name, :class => "form-control", :placeholder => "First Name" , :value => "#{@user.first_name}"%>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :last_name, "last Name", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :last_name, :class => "form-control", :placeholder => "last Name", :value => "#{@user.last_name}" %>
        </div>
      </div>
      <div class="form-group row">
        <%= f.label :about, "About Me", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_area :about, cols: 5, rows: 15,:class => "form-control", :placeholder => "Enter Small Summary About Yourself", :value => "#{@user.about}"  %>
        </div>
      </div>
      <div class="form-group row">
        <% if @user.email %>
        <%= label_tag :email, "Email Address", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.email_field :email, :class => "form-control", :placeholder => "Email Address", :value => "#{@user.email}", :disabled => true %>
        <%else%>
        <%= label_tag :email, "Email Address", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.email_field :email, :class => "form-control", :placeholder => "Email Address", :value => "#{@user.email}" %>
        <%end%>

        </div>
      </div>
      <div class="form-group row">
        <%= label_tag :role, "Account Type", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :role, :class => "form-control", :disabled => true , :value => "#{@user.role}"%>
        </div>
      </div>

      <div class="form-group row flex btns-group">
        <%= link_to("Delete Account", "/users/#{@user.id}",:class => "btn btn-warning", :method => "DELETE") %>
        <%= f.submit "Save Changes", :class => "btn btn-primary" %>
      </div>
      <!-- Form For School Update  -->
    <% end %>
  </div>
  <!-- Info Card -->
</div>



