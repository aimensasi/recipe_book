
      <%= form_for @ingredient, :method => "Post" do |f|%>

      <div class="form-group row">
        <%= f.label :name, "Name", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :name, :class => "form-control", :placeholder => "What is the name of the ingredient?"%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :quantity, "Quantity", :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :quantity, :class => "form-control", :placeholder => "Quantity?"%>
        </div>
      </div>

      <div class="form-group row flex btns-group">
      <%= f.hidden_field :recipe_id, :class => "form-control",:value=> @recipe.id%>
        <%= f.submit "Add Ingredient", :class => "btn btn-submit" %>
      </div>

    <% end %>

